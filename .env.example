# Required: OpenAI API key (for Whisper transcription + optional GPT-4o)
OPENAI_API_KEY=sk-...

# LLM Provider: "openai" (default, works on Vercel) or "ollama" (local dev only)
LLM_PROVIDER=openai

# OpenAI LLM settings (when LLM_PROVIDER=openai)
OPENAI_MODEL=gpt-4o

# Ollama settings (when LLM_PROVIDER=ollama, local development only)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
